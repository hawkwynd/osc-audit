<div class="card">
    <div class="card-header">
        <h1>OMNISCAN</h1>
    </div>

    <div class="card-body">
      <h2> Admin Panel</h2>
      {{# if errors }}
          {{# each errors }}
              <p class="red-text">{{ this.msg }}</p>        
          {{/each}}
      {{/if}}
  <form class="form-signin" method="post" action="login" >
      
      <div class="form-group">
        <label for="email" class="sr-only">email</label>
        <input type="email" name="email" id="email" class="form-control" placeholder="email"  autofocus>
      </div>

      <div class="form-group">
        <label for="password" class="sr-only">Password</label>
        <input type="password" name="password" id="password" class="form-control" placeholder="Password" >
      </div>
      
      <button type="submit" class="btn oc-btn">Login</button>
      <br />
      <a href="/" alt="Go Back" class="btn oc-btn back">Back</a>      
    </form>

    </div>
    
</div>
