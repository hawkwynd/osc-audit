<div class="container formContainer">
  <div class="split">
    <div class="left">
      <h2 class="h3 mb-3 font-weight-normal">OC SCAN Portal</h2>
      <div class="p-wrapper">
        <p><i class="fas fa-key"></i> Password Retriever</p>
       
      </div>
    </div>
    <div class="right">
      <h2 class="h3 mb-3 font-weight-normal">Forgot Your Password?</h2>
      <div class="loginMsg">
        Enter the email address associated with your account.
        </div>
            
      {{#if error }}
              <p class="red-text forgotpw"> {{ error }}</p>        
      {{/if}}
     
      <form class="form-signin" method="post" action="pwsubmit" >
        <div class="input-field col 26">
          <label for="email" class="sr-only">email</label>
          <input type="text" name="email" id="email" class="form-control" placeholder="Email address" >
        </div>

          <button type="submit" class="btn btn-primary btn-block oc-btn">submit</button>
        </form>
    </div>
  </div>
</div>