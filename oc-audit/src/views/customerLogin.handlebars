
<div class="card">
    <div class="card-header">
        <h1>OMNISCAN</h1>
    </div>

    <div class="card-body">
        <h2 class="card-title">Customer Login</h2> {{# if error }}
        <p class="red-text ">{{ error }}</p>
        {{/if}}
        <form class="form-signin" method="post" action="login">

            <div class="form-group">
                <label for="email" class="sr-only">email</label>
                <input type="text" name="email" id="email" class="form-control" placeholder="Email address" autofocus required>
            </div>

            <div class="form-group">
                <label for="customerId" class="sr-only">Customer Id</label>
                <input type="password" name="customerId" id="customerId" class="form-control" placeholder="Password" required>
            </div>
            <button type="submit" class="btn oc-btn">Login</button>
        </form>

        <div class="forgotpwLink">
            <a href="/customer/forgotpw" class="lostpw">I seem to have forgotten my password</a>
        </div>

    </div>
    <div class="card-footer">
      <div class="align-self-center">
          <p><i class="fas fa-search-plus"></i> Monitor Website changes</p>
          <p><i class="fas fa-envelope"></i> Notifications instantly</p>
          <p><i class="fas fa-history"></i> Access to change history</p>
      </div>
  </div>
</div>
