<div class="container">
    
    {{#if vName  }}<div class="custInfo">Audits of {{vUrl}}</div> {{/if}}
    
    <div>Sort by date</div>
    
    <form action="audits?cu={{cu}}" class="d-flex justify-content-center">
        <div class="form-group">
            <input type="date" name="date" placeholder="Select a date" class = "form-control">
        </div>
         <div class="form-group">
            <button type="submit" class="btn oc-btn">Submit</button>
        </div>
    </form>


    <table class="table table-striped table-hover table-sm">
        <thead>
            <tr class="">
                <th scope="col">Name</th>
                <th scope="col">URL</th>
                <th scope="col">Change Date</th>
                <th scope="col">Dev Option</th>
                <th scope="col">Visit Live Page</th>
                {{#if user}}
                    <td>Delete</td>
                {{/if}}
            </tr>
        </thead>
        <tbody>
            {{# each audits }}
                <tr>
                    <td><a href="/audits/{{this.id}}">{{{this.cuName}}}</td>
                    <td><a href="/audits/{{this.id}}" >{{{this.url}}}</td>
                    <td><a href="/audits/{{this.id}}">{{{formatDate this.modified "MM/DD/YYYY"}}}</td>
                    <td><a href="/audits/dev/{{this.id}}">View Code</td>
                    <td><a class = "btn oc-btn" target = "_blank" href="{{{this.url}}}" >Go</a></td>
                    {{#if ../user}}
                        <td><a href="/audits/delete/{{this.id}}" ><i class="material-icons red-text darken-4">delete</td>
                    {{/if}}
                </tr>
            {{/each}}
        </tbody>
    </table>
    <nav aria-label="Page navigation example" class = "d-flex justify-content-center">
        <ul class="pagination">
            {{# each pages }}
                <li class="page-item"><a class="{{{active ../paginate.page this.number}}} page-link" href="{{{this.url}}}">{{this.number}}</a></li>
            {{/each}}
        </ul>
    </nav>
</div>